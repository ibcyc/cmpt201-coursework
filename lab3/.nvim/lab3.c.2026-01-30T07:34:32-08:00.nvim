#define _POSIX_C_SOURCE 200809L
#include <stdio.h>
#include <stdlib.h>
#include <string.h>

int main() {
  while (1) {
    printf("Enter input: ");

    char *buff = NULL;
    size_t size = 0;
    ssize_t num_char = getline(&buff, &size, stdin);

    if (num_char == -1) {
      free(buff);
      break;
    }

    printf("%s", buff);
    free(buff);
  }
  return 0;
}
