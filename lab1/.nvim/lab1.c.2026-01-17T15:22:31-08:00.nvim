#define _POSIX_C_SOURCE 200809L
#include <stdio.h>
#include <stdlib.h>

int main() {
  char *buff = NULL;
  size_t size = 0;
  ssize_t num_char = getline(&buff, &size, stdin);

  if (num_char != -1) {
    printf("Typed: %s", buff);
    printf("Chars read: %d\n", num_char);
  }

  free(buff);
  return 0;
}
